  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}
@media only screen and (-webkit-device-pixel-ratio:2){
  .border:after{
      width: 200%;
      height: 200%;
      -webkit-transform: scale(0.5);
      transform: scale(0.5);
      -webkit-transform-origin: left top;
      transform-origin: left top;
  }
  .border-left:after{
      width: 200%;
      height: 200%;
      -webkit-transform: scale(0.5);
