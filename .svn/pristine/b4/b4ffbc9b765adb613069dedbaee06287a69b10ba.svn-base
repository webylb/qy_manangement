<template>
    <div class="hexiao" ref="heixaoContent">
        <section class="hexiao-wrap">
          <div class="qr-wrap" @click="handleSao">
            <img src="../assets/images/sao.png" alt="">
          </div>
          <div class="input-group-wrap">
            <div class="input-item">
              <van-field
                v-model="couponCode"
                type="text"
                placeholder="手动输入券码"
                @focus="focusInput"
                clearable
              />

              <van-button class="right-button sub" @click="subInfo()">提交</van-button>

            </div>
          </div>
          <div class="rec" @click="toHexiaoRecord">
            <p class="rec-text">核销记录</p><img src="../assets/images/right.png" alt="">
          </div>
        </section>
        <van-dialog
          v-model="showErr"
          title="核销失败"
          confirm-button-color="#1890FF"
        >
          <img class="dialog-img" src="../assets/images/err.png">
          <p class="dialog-text">请查看券码是否正确</p>
        </van-dialog>
        <van-dialog
          v-model="showInfo"
          :title="couponTitle"
          show-cancel-button
          confirm-button-color="#1890FF"
          confirmButtonText="确认核销"
          @confirm="toHexiao"
        >
          <p class="dialog-subtitle">使用期限</p>
          <p class="dialog-text2">{{ startTime }} 至 {{ endTime }}</p>
          <p class="dialog-subtitle">使用规则</p>
          <p class="dialog-text2">{{ ruleText }}</p>
        </van-dialog>
    </div>
</template>

<script>
    import { Field, Button, Dialog  } from 'vant'
    import * as core from '../api/hexiao'
    import wx from 'weixin-js-sdk'
    import { timeFormat } from '../common/js/util'

    export default {
        name: 'heXiao',
        data() {
          return {
            loading: false,
            finished: false,
            couponCode: null,
            showErr: false,
            showInfo: false,
            couponTitle: '提示',
            couponTitle: null,
            startTime: null,
            endTime: null,
            ruleText: null,
          }
        },
        created() {
          //this.getWXData()
        },
        methods: {
          focusInput(e){
            // var doc = document.documentElement;
            // document.body.style.height = doc.scrollHeight+'px';
          },
          handleSao(){
            this.getWXData()
          },
          getWXData() {
            let _this = this
            core.getWXData({url: window.location.href}).then(data => {
              if (data.code && '00' === data.code) {
                let sd = data.result
                wx.config({
                  debug: false,
                  appId: sd.appId,
                  timestamp: sd.timestamp,
                  nonceStr: sd.nonceStr,
                  signature: sd.signature,
                  jsApiList: ['scanQRCode']
                });
                wx.ready(function () {
                  console.log("微信SDK配置完成")
                  wx.scanQRCode({
                    needResult: 1, // 默认为0，扫描结果由微信处理，1则直接返回扫描结果，
                    success: function (res) {
                        var result = res.resultStr; // 当needResult 为 1 时，扫码返回的结果
                        console.log("扫描结果："+result);
                        _this.subInfo(result)
                        _this.couponCode = result
                    }
                  })
                })
                wx.error(function (res) {
                  console.log(res)
                });
              }
            })
          },
          subInfo(opts){
            if(opts){
              this.getTicketDetail({cardNo: opts})
            }else{
              if(this.couponCode){
                this.getTicketDetail({cardNo: this.couponCode})
              }else{
                this.$toast('卡密不能为空')
              }
            }
          },
          toHexiaoRecord(){
            this.$router.push('/heixiaoRecord')
          },
          getTicketDetail(opts){
            core.getTicketDetail(opts).then(res => {
              //console.log(res)
              if (res.code && res.code === '00') {
                if(res.result){
                  this.couponTitle = res.result.title
                  this.startTime = timeFormat(res.result.startTime)
                  this.endTime = timeFormat(res.result.endTime)
                  this.ruleText = res.result.rule
                  this.showInfo = true
                }
              }else{
                this.$toast(res.message)
              }
            }).catch(err => {
              this.$toast("网络错误")
            })
          },
          toHexiao(){
            core.toHeXiao({cardNo: this.couponCode}).then(res => {
              //console.log(res)
              if (res.code && res.code === '00') {
                this.couponCode = null
                this.showInfo = false
                this.$toast(res.message)
              }else{
                this.$toast(res.message)
              }
            }).catch(err => {
              this.$toast("网络错误")
            })
          },
        },
        activated() {
          document.title = this.$route.meta.title;
          this.couponCode = null
        },
        components: {
          [Field.name]: Field,
          [Button.name]: Button
        }
    }
</script>

