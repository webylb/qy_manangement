<script>
    import * as core from '../api/home'
    import { CellGroup, Field, Button, DatetimePicker, Icon, Uploader, Popup, Picker } from 'vant'
    import { timeFormat } from '../common/js/util'

    export default {
      name: 'createContent',
      data() {
        return {
          loading: false,
          finished: false,
          couponName: '',
          couponType: '',
          couponPrice: '',
          couponNum: '',
          couponText: '',
          imgList: [],
          fileList: [],
          currentDate: new Date(),
          minDate: new Date(),
          showDate: false,
          timeType: null,
          startTime: null,
          endTime: null,
          showPicker: false,
          columns: ['满减券','抵价券','商品券']
        }
      },
      components: {
        [Field.name]: Field,
        [CellGroup.name]: CellGroup,
        [Button.name]: Button,
        [Icon.name]: Icon,
        [DatetimePicker.name]: DatetimePicker,
        [Uploader.name]: Uploader,
        [Popup.name]: Popup,
        [Picker.name]: Picker
      },
      watch: {
        startSubTime(newVal,oldVal){
          if(this.endSubTime){
            if(newVal > this.endSubTime){
              this.endSubTime = null
              this.endTime = null
            }
          }
        },
        endSubTime(newVal,oldVal){
          if(this.startSubTime){
            if(newVal < this.startSubTime){
              this.$toast('结束时间不能小于开始时间')
              this.endSubTime = null
              this.endTime = null
            }
          }else{
            this.endSubTime = null
            this.endTime = null
            this.$toast('请先选择开始时间')
          }
        },
      },
      created() {
        document.title = this.$route.meta.title;
      },
      methods: {
        subInfo(){
          let data = {}
          if(!this.couponName){
            this.$toast("请输入券码名称")
            return;
          }
          data.title = this.couponName
          if(!this.couponType){
            this.$toast("请选择券码类型")
            return;
          }
          data.category = this.couponType
          if(!this.couponPrice){
            this.$toast("请输入券码售价")
            return;
          }
          data.salePrice = this.couponPrice
          if(!this.couponNum){
            this.$toast("请输入券码数量")
            return;
          }
          data.batchCount = this.couponNum
          if(!this.startTime){
            this.$toast("请输入有效开始期限")
            return;
          }
          data.startTime = this.startTime
          if(!this.endTime){
            this.$toast("请输入有效截止期限")
            return;
          }
          data.endTime = this.endTime
          // if(!this.fileList){
          //   this.$toast("请上传券码图片")
          //   return;
          // }
          let picStr = []
          if(this.fileList && this.fileList.length > 0){
            for (var i = 0; i < this.fileList.length; i++) {
              picStr.push(this.fileList[i].url)
            }
            data.coverImgs = picStr.join(',')
          }else{
            this.$toast("请上传券码图片")
            return;
          }
          if(!this.couponText){
            this.$toast("请输入使用规则")
            return;
          }
          data.rule = this.couponText
          core.createPager(data).then(res => {
            //console.log(res)
            if (res.code && res.code == '00') {
              this.$toast(res.message)
              this.$router.push('/')
            }else{
              this.$toast(res.message)
            }
          }).catch(err => {
            this.loadingStatus = false
            this.$toast("网络错误")
          })
        },
        clickStartTime(){
          this.timeType = 'start'
          this.showDate = true
        },
        clickEndTime(){
          this.timeType = 'end'
          this.showDate = true
        },
        cancelTime(){
          this.showDate = false
        },
        confirmTime(res){
          this.showDate = false
          if(this.timeType == 'start'){
            this.startTime = timeFormat(res.getTime())
          }else{
            this.endTime = timeFormat(res.getTime())
          }
          //console.log(res)
        },
        toRegister(){
          this.$router.push('/register')
        },
        beforeRead(file){
          console.log(file)
          if (file.type !== 'image/jpeg' && file.type !== 'image/png') {
            this.$toast('请上传 jpg 或者 png 格式图片');
            return false;
          }
          let formData = new FormData();
          formData.append('uploadFile', file, file.name);
          core.uplaodImg(formData).then(res => {
              if (res && res.code == '00') {
                this.fileList.push({url: res.result, isImage: true })
              }
          })
          return false;
        },
        afterRead(){

        },
        beforeDelete(file){
          console.log(file)
          this.fileList.forEach((item,index) => {
            if(item.url == file.url){
              this.fileList.splice(index, 1)
            }
          })
        },
        deleteImg(file){
          console.log(file)
        },
        onConfirm(value) {
          this.couponType = value;
          this.showPicker = false;
        }
      }
    }
</script>

